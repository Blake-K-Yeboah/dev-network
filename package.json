{
  "name": "dev-network",
  "version": "1.0.0",
  "description": "Social Network built on MERN stack for developers",
  "main": "server.js",
  "author": "Blake Yeboah",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^5.0.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.6",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^2.2.0",
    "mongoose": "^5.8.9",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "socket.io": "^2.3.0",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.2"
  },
  "scripts": {
    "client-install": "yarn install --prefix client",
    "start": "yarn install && node server.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false yarn install --prefix client && cd client && yarn run build",
    "server": "nodemon server.js",
    "client": "cd client && yarn start",
    "dev": "concurrently -kill-others \"yarn run server\" \"yarn run client\""
  },
  "engines": {
    "node": "12.13.1"
  }
}